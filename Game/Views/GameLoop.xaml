<UserControl x:Class="Game.Views.GameLoop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Game.Views"
             xmlns:vm="clr-namespace:Game.ViewModels"
             mc:Ignorable="d"
             Height="450" Width="800">

    <UserControl.Resources>
        <vm:GameViewModel x:Key="GameViewModel"/>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{StaticResource GameViewModel}">

        <Grid x:Name="Grid" Margin="22,0,22,58" RenderTransformOrigin="0.5,0.5" />
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Command="{Binding LoadBoardCommand}"/>

    </Grid>
</UserControl>
